#!/usr/bin/env python3
"""Speak daemon â€” thin entry point.

All logic lives in lib/speakd/. This script just adds lib/ to sys.path
and delegates to speakd.server.main().
"""

import os
import sys

# Add lib/ directory to Python path so 'speakd' package is importable
sys.path.insert(0, os.path.join(os.path.dirname(__file__), "..", "lib"))

from speakd.server import main

if __name__ == "__main__":
    main()
